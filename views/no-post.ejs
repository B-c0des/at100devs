<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2>Title:</h2>
      <h2><%= posts2[0].title %></h2>
      <img class="img-fluid" src="<%= posts2[0].image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/post/likePost/<%= posts2[0]._id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= posts2[0].likes %></h3>
        <%if(posts2[0].user == user.id){ %>
        <form
          action="/post/deletePost/<%= posts2[0].id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <h2>Name:</h2>
      <p><%= posts2[0].name %></p>
    </div>
    <div class="col-3 mt-5">
      <h2>Caption:</h2>
      <p><%= posts2[0].caption %></p>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
