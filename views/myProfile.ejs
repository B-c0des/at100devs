<%if(post.length == 0){ %>
    <div id='alert'>
        <div id="dropdown-alert">
            <h1>Create a Profile first!</h1>
        </div>
    </div>
    <%}%>
        <% for(var i=0; i<post.length; i++) {%>
            <div id="myProfile" class="container-view" style="z-index:20;">
                <div id='x' onclick="myProfile()" style="z-index:20">x</div>
                <div style="background-image: url('<%= post[0].image%>'); width:100%; z-index: 5;  background-size: cover; background-position: center;box-shadow: 6px 3px 14px 1px  rgba(00,00,00,.9);" id="img"></div>
                <div id="add-posts">

                    <div id="user-info1">
                        <div id="top-row">
                            <span><%= post[0].name ?   post[0].name : '' %></span>
                            <span><%= post[0].title ?  post[0].title : '' %></span>
                        </div>
                        <div id="middle-row">
                            <div id='likebox'>
                                <%if(post[0].user == user.id){ %>
                                    <form action="/post/deletePost/<%= post[0]._id %>?_method=DELETE" method="POST" class="row-6 justify-content-between  ">
                                        <button class="btn btn-primary fa fa-trash" type="submit" onclick="return confirm('Are you sure you want to delete your profile?')"></button>
                                    </form>
                                    <%}%>
                            </div>
                            <a id="icons" href="tel:<%= post[0].contact ?   posts2[i].contact : '' %>">
                                <span class="iconify" data-icon="fa-solid:phone-alt" data-inline="false"></span>
                            </a>
                            <a id="icons" href="sms:<%= post[0].contact ?   posts2[i].contact : '' %>">
                                <span class="iconify" data-icon="fa-solid:sms" data-inline="false"></span>
                            </a>
                            <a id="icons" href="https://<%- post[0].website ? posts2[i].website : '' %> ">
                                <span class="iconify" data-icon="dashicons:admin-site-alt3" data-inline="false"></span>
                            </a>
                            <a id="icons" href="">
                                <span class="iconify" data-icon="entypo:location" data-inline="false"></span>
                            </a>
                        </div>
                        <div id="bottom-row">
                        </div>
                        <div id="row">
                            <span><%- post[0].icons %></span>
                        </div>
                        </span>
                    </div>
                    <div id='across'>
                        <div>
                            <h1 id="comment-box"></h1>
                            <% for(var j=0; j < post[i].comments.length; j++) {  %>
                               
                                    <% for(var k=0; k < post.length; k++) {  %>
                                        
                                           
                                           <%- (post[i].comments[j].postedBy.toString().trim() == post[k]?.user.toString().trim()) == true ? `<h1 id="commentName" onclick="document.getElementById('${[k]}').style.display = 'flex';document.getElementById('${(k !== i) ? [i] : ''}').style.display = 'none'"> ${post[k].name}  -  ${post[k].title}  </h1>   `  : '' %> 
        
                                           <%- (post[i].comments[j].postedBy.toString().trim() == post[k]?.user.toString().trim()) == true ? `<h1 id="comment-box2">  `  : '' %> 
                                           
                                           <%- (post[i].comments[j].postedBy.toString().trim() == post[k]?.user.toString().trim()) == true ? `<img id="userIcon" onclick="document.getElementById('${[k]}').style.display = 'flex';document.getElementById('${(k !== i) ? [i] : ''}').style.display = 'none'" src="${posts2[k]?.image.toString().trim()}">` : '' %>
                                           
                                           <%- (post[i].comments[j].postedBy.toString().trim() == post[k]?.user.toString().trim()) == true ? `<h1 id="comment"> ${post[i].comments[j].comments} </h1>` : '' %>
                                           
                                           <%- (post[i].comments[j].postedBy.toString().trim() == post[k]?.user.toString().trim()) == true ? `</h1">  `  : '' %> 
                                        </h1>
                                     <% } %>
        
        
                                                    
                            <% } %>
                            </h1>   
                        </div>
                    </div>
                    <form class="col-10 w-100" action="/post/commentPost/<%= post[0]._id %>?_method=PUT" enctype="multipart/form-data" method="POST">
                        <div id="post-comment-box" class="text-center">
                            <input type="text" class="form-control" name="comments" id='sendComment'></input>
                        </div>
                        <button type="submit" class="btn btn-primary text-center w-100 rounded-bottom" value="comments">Post comment!</button>
                    </form>
                </div>
            </div>
            </div>
            </div>
            </div>
            <% } %>